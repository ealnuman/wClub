# Normalize line endings for text files
* text=auto

# Ensure Python files use LF in the repo
*.py text eol=lf
*.pyw text eol=lf

# JSON and text-based config files
*.json text eol=lf
*.md   text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.toml text eol=lf

# Workspace and editor files
*.code-workspace text eol=lf

# Treat images and other binaries as binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# VS Code settings
.vscode/** text eol=lf
